<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_herbaty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    style="@style/bg"
    tools:context="com.example.milek.projektztp.HerbatyActivity">

    <TextView
        android:text="Wybierz syrop:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/rodzaj_herbaty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Wybierz kulki:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rodzaj_syropu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/textView5" />

    <Spinner
        android:entries="@array/rodzaje_herbaty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rodzaj_herbaty"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:entries="@array/rodzaje_syropu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rodzaj_syropu"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:entries="@array/rodzaje_kulek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rodzaj_kulek"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Wybierz rodzaj herbaty:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kompozycja"
        android:layout_alignBottom="@+id/stworz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp" />

    <Button
        android:text="Koszyk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        style="@style/btnStyle"
        android:id="@+id/buttonZobaczKoszyk"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <Button
        android:text="Dodaj do koszyka"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_dodaj_do_koszyka"
        style="@style/btnStyle"
        android:enabled="false"
        android:layout_alignTop="@+id/buttonZobaczKoszyk"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <Button
        android:text="Stwórz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stworz"
        style="@style/btnStyle"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/rodzaj_kulek"
        android:layout_alignLeft="@+id/buttonZobaczKoszyk"
        android:layout_alignStart="@+id/buttonZobaczKoszyk" />

    <TextView
        android:text="Skomponuj własną herbatę:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3473A0"
        android:textSize="20dp"
        android:id="@+id/textView2"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
         />


</RelativeLayout>
